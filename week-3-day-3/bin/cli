puts "Enter your email"
email = gets.chomp
user = User.find_by(email: email)

puts "What do you want to do?"
puts "0. Create shortened URL"
puts "1. Visit shortened URL"

answer = gets.chomp

if answer == "0"
  puts "Type in your long url"
  long_url = gets.chomp
  short_url = ShortenedUrl.create_for_user_and_long_url!(user, long_url)
  puts short_url.short_url

elsif answer == "1"
  puts "Type in shortened URL"
  short_url = gets.chomp
  short_url_object = ShortenedUrl.find_by(short_url: short_url)
  Visit.record_visit!(user, short_url_object)
  Launchy.open short_url_object.long_url
end
